import numpy as np
import pandas as pd
import yfinance as yf
import warnings
import requests
import riskfolio as rp
import urllib as urllib
from zipfile import ZipFile
import io
from io import StringIO
from io import BytesIO
from openpyxl import load_workbook


warnings.filterwarnings("ignore")
pd.options.display.float_format = '{:.4%}'.format

# Date range
start = '2016-01-01'
end = '2019-12-30'

# Downloading parameters
def excel_download():
    constraint_url = "https://raw.githubusercontent.com/ra6it/RiskParity/main/RiskParity_Holdings.csv"
    download = requests.get(constraint_url).content
    assets = pd.read_csv(io.StringIO(download.decode('utf-8')),usecols = ['Asset','Industry'])
    constraints = pd.read_csv(io.StringIO(download.decode('utf-8')), usecols = ['Disabled','Type','Set','Position','Sign','Weight','Type_Relative','Relative_Set','Relative','Factor'])
    
    constraints = constraints.fillna('')
    constraints[0] = np.arange(len(constraints))

    asset_classes = {'Assets': assets['Asset'].values.tolist(), 
                     'Industry': assets['Industry'].values.tolist()}
    assets = asset_classes['Assets']
    asset_classes=pd.DataFrame.from_dict(asset_classes)

    print(constraints.info(), constraints)

    return assets, constraints,asset_classes
        
# Downloading data
def data_download(assets):
    data = yf.download(assets, start = start, end = end)
    data = data.loc[:,('Adj Close', slice(None))]
    Y = data.pct_change().dropna()
    return Y
    
# Select method and estimate input parameters:
def method():
    method_mu='hist' # Method to estimate expected returns based on historical data.
    method_cov='hist' # Method to estimate covariance matrix based on historical data.
    return method_mu, method_cov

# Estimate optimal portfolio:

def portfolio_object(assets,method_mu, method_cov):
    port = rp.Portfolio(returns=data_download(assets))
    port.assets_stats(method_mu=method_mu, method_cov=method_cov, d=0.94)
    return port

def create_pie(w):
    ax = rp.plot_pie(w=w, title='Sharpe Mean Variance', others=0.05, nrow=25, cmap = "tab20",
                 height=6, width=10, ax=None)

def efficient_frontier(model,rm,obj,hist,rf,l,points,port):
    frontier = port.efficient_frontier(model=model, rm=rm, points=points, rf=rf, hist=hist)
    print(frontier.T.head())

def constraints_weightings(constraints,asset_classes,assets):
    A, B = rp.assets_constraints(constraints, assets)


def runner(model,rm,obj,hist,rf,l,points,):
    assets, constraints,asset_classes = excel_download()
    method_mu, method_cov = method()
    port = portfolio_object(assets,method_mu, method_cov)
    w = port.optimization(model=model, rm=rm, obj=obj, rf=rf, l=l, hist=hist)
    efficient_frontier(model,rm,obj,hist,rf,l,points, port)
    constraints_weightings(asset_classes,constraints,assets)
   

#########################################Parameters##########################################
model='Classic' # Could be Classic (historical), BL (Black Litterman) or FM (Factor Model)
rm = 'MV' # Risk measure used, this time will be variance
obj = 'Sharpe' # Objective function, could be MinRisk, MaxRet, Utility or Sharpe
hist = True # Use historical scenarios for risk measures that depend on scenarios
rf = 0 # Risk free rate
l = 1 # Risk aversion factor, only useful when obj is 'Utility'
points = 50 # Number of points of the frontier

runner(model,rm,obj,hist,rf,l,points)


